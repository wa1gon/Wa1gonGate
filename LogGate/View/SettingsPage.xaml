<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm ="clr-namespace:LogGate.ViewModel"
             x:Class="LogGate.View.SettingsPage"
             Title="SettingsPage"
             x:DataType="vm:SettingsViewModel">
    <ContentPage.BindingContext>
        <vm:SettingsViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <Grid RowDefinitions="*,50">

            <FlexLayout Grid.Row="0" Direction="Row" Wrap="Wrap">
                <VerticalStackLayout>
                    <Label Text="Database Type"/>
                    <Entry Placeholder="Database type" Text="{Binding DatabaseType}"></Entry>
                </VerticalStackLayout>
            </FlexLayout>
            
            <Button
                x:Name="btnAdd"
                Command="{x:Binding CloseCommand}"
                Grid.Row="1"
                Margin="5"
                Grid.Column="0"
                Text="Close" />
        </Grid>
    </ScrollView>

</ContentPage>