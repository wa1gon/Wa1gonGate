<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm ="clr-namespace:LogGate.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LogGate.View.SettingsPage"
             Title="Settings"
             x:DataType="vm:SettingsViewModel">
    <ContentPage.BindingContext>
        <vm:SettingsViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>

        <Grid RowDefinitions="*,50">

            <FlexLayout Grid.Row="0" Direction="Row" Wrap="Wrap">
                <VerticalStackLayout>
                    <Label Text="Database Type"/>
                    <Entry Placeholder="Database type" Text="{Binding DatabaseType}"></Entry>
                </VerticalStackLayout>

            <Picker x:Name="hobbiesPicker"
                Title="Select a Hobby">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Horse Riding</x:String>
                        <x:String>Amateur Radio</x:String>
                        <x:String>Coding</x:String>
                        <x:String>Reading</x:String>
                        <x:String>Gardening</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            </FlexLayout>
            <Button
                x:Name="btnAdd"
                Command="{x:Binding CloseCommand}"
                Grid.Row="1"
                Margin="5"
                Grid.Column="0"
                Text="Close" />
        </Grid>
    </ScrollView>

</ContentPage>