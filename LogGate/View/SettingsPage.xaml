<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm ="clr-namespace:LogGate.ViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LogGate.View.SettingsPage"
             Title="Settings" BackgroundColor="Wheat"
             x:DataType="vm:SettingsViewModel">
    <ContentPage.BindingContext>
        <vm:SettingsViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>

        <Grid RowDefinitions="*,50">

            <FlexLayout Grid.Row="0" Direction="Row" Wrap="Wrap" >
                <VerticalStackLayout Margin="10,0,0,40">
                    <Label Text="Database Type" TextColor="Black"/>
                    <Entry BackgroundColor="White" TextColor="Black"  Placeholder="Database type" Text="{Binding DatabaseType}"></Entry>
                </VerticalStackLayout>

                <VerticalStackLayout Margin="10,0,0,40">
                    <Label Text="Latitude" TextColor="Black"/>
                    <Entry BackgroundColor="White" TextColor="Black"  Placeholder="Latitude" Text="{Binding Latitude, Mode=TwoWay}"></Entry>
                </VerticalStackLayout>


                <Picker x:Name="databasePicker" BackgroundColor="White" TextColor="Black" 
                        Margin="10,0,10,0" TitleColor="Black" 
                        Title="Select a Hobby" SelectedItem="{Binding DbSelection}" 
                        ItemsSource="{Binding DbOptions}" >

                    <Picker.ItemDisplayBinding>
                        <Binding Path="Name"/>
                    </Picker.ItemDisplayBinding>

                </Picker>
                
                
            </FlexLayout>
            <Button
                x:Name="btnAdd"
                Command="{x:Binding CloseCommand}"
                Grid.Row="1"
                Margin="5"
                Grid.Column="0"
                Text="Close" />
        </Grid>
    </ScrollView>

</ContentPage>