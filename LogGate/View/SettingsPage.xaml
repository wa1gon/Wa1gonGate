<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LogGate.View.SettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             xmlns:sfInputs="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:LogGate.ViewModel"
             Title="Settings"
             x:DataType="vm:SettingsViewModel"
             BackgroundColor="Green">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Picker">
                <Setter Property="TextColor" Value="LightGray" />
                <Setter Property="BackgroundColor" Value="DarkGreen" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="TitleColor" Value="Black" />

            </Style>

            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="Gray" />
                <Setter Property="BackgroundColor" Value="DarkGreen" />
                <Setter Property="TextColor" Value="White" />
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>

        <Grid ColumnDefinitions="auto,auto,auto,auto,auto"
              ColumnSpacing="10"
              RowDefinitions="auto,auto,130,80,*,70">


            <VerticalStackLayout Grid.Row="0"
                                 Margin="10,10,0,0"
                                 Padding="0,0,0,10"
                                 HorizontalOptions="Start"
                                 VerticalOptions="Start">
                <sf:SfTextInputLayout CharMaxLength="8"
                                      ContainerType="Outlined"
                                      ErrorText="Error"
                                      HasError="False"
                                      Hint="Your Callsign"
                                      WidthRequest="150">
                    <Entry BackgroundColor="Green"
                           Placeholder="Callsign"
                           Text="{Binding Callsign}"
                           TextChanged="ForceUppercase"
                           TextColor="Black" />
                </sf:SfTextInputLayout>

            </VerticalStackLayout>


            <Border Grid.Row="1"
                    Margin="12,0,0,0"
                    Padding="10,10,10,10"
                    BackgroundColor="Wheat"
                    HeightRequest="150"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    WidthRequest="350">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20,20,20,20" />
                </Border.StrokeShape>
                <VerticalStackLayout>
                    <Label Margin="0,0,0,0"
                           BackgroundColor="Black"
                           HorizontalOptions="Center"
                           Text="   Location Information" />
                    <HorizontalStackLayout Margin="0,-10,0,0" VerticalOptions="Start">
                        <sf:SfTextInputLayout Margin="10,20,0,40"
                                              ContainerType="Outlined"
                                              HeightRequest="80"
                                              Hint="Longitude"
                                              VerticalOptions="Center"
                                              WidthRequest="100">
                            <Entry Placeholder="Longitude"
                                   Text="{Binding Longitude}"
                                   TextChanged="OnNumericEntryTextChanged"
                                   TextColor="Black" />
                        </sf:SfTextInputLayout>

                        <sf:SfTextInputLayout Margin="10,20,0,40"
                                              ContainerType="Outlined"
                                              HeightRequest="80"
                                              Hint="Latitude"
                                              VerticalOptions="Center"
                                              WidthRequest="100">
                            <Entry Placeholder="Latitude"
                                   Text="{Binding Latitude}"
                                   TextChanged="OnNumericEntryTextChanged"
                                   TextColor="Black" />
                        </sf:SfTextInputLayout>


                        <sf:SfTextInputLayout Margin="10,20,0,40"
                                              ContainerType="Outlined"
                                              HeightRequest="80"
                                              Hint="Grid Square"
                                              VerticalOptions="Center"
                                              WidthRequest="100">
                            <Entry BackgroundColor="Green"
                                   Placeholder="Grid Square"
                                   Text="{Binding GridSquare}"
                                   TextColor="Black" />
                        </sf:SfTextInputLayout>

                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="2"
                    Margin="12,0,0,0"
                    Padding="0,3,0,0"
                    BackgroundColor="Wheat"
                    HeightRequest="150"
                    HorizontalOptions="Start"
                    Stroke="Wheat"
                    StrokeThickness="3"
                    WidthRequest="650">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20,20,20,20" />
                </Border.StrokeShape>
                <VerticalStackLayout>

                    <Label Margin="0,0,0,0"
                           BackgroundColor="Black"
                           HorizontalOptions="Center"
                           Text="   Primary Database Information " />

                    <HorizontalStackLayout Grid.Row="2"
                                           Margin="0,10,0,0"
                                           VerticalOptions="Start">

                        <VerticalStackLayout Padding="5"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start">

                            <sf:SfTextInputLayout Margin="5,0,0,0"
                                                  ContainerType="Outlined"
                                                  Hint="Database Type"
                                                  WidthRequest="300">


                                <sfInputs:SfComboBox ClearButtonIconColor="Red"
                                                     DisplayMemberPath="Name"
                                                     DropDownIconColor="Green"
                                                     HeightRequest="36"
                                                     IsEditable="False"
                                                     ItemsSource="{Binding DbOptionType}"
                                                     Placeholder="Select Database type"
                                                     PlaceholderColor="DarkGray"
                                                     SelectedIndex="0"
                                                     SelectedItem="{Binding DbType}"
                                                     WidthRequest="300" />
                            </sf:SfTextInputLayout>

                        </VerticalStackLayout>

                        <VerticalStackLayout Margin="5,-20,0,40"
                                             Padding="5"
                                             HorizontalOptions="Start"
                                             VerticalOptions="Start">
                            <sf:SfTextInputLayout Margin="0,20,0,40"
                                                  ContainerType="Outlined"
                                                  HeightRequest="80"
                                                  Hint="Database Connection String"
                                                  WidthRequest="300">
                                <Entry Placeholder="Connections String"
                                       Text="{Binding ConnectionString}"
                                       TextColor="Black" />
                            </sf:SfTextInputLayout>

                        </VerticalStackLayout>

                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <Grid Grid.Row="5" ColumnDefinitions="*,*" Grid.Column="0" Grid.ColumnSpan="5">
                <Button x:Name="saveBtn"
                        Grid.Column="0"

                        Margin="0,0,0,10"
                        Command="{x:Binding SaveCommand}"
                        HorizontalOptions="Center"
                        Text="Save" />
                <Button x:Name="btnAdd" 
                        Grid.Column="1"
                        Margin="0,0,0,10"
                        Command="{x:Binding CloseCommand}"
                        HorizontalOptions="Center"
                        Text="Close" />
            </Grid>
        </Grid>
    </ScrollView>

</ContentPage>