<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LogGate.View.SettingsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:vm="clr-namespace:LogGate.ViewModel"
             Title="Settings"
             x:DataType="vm:SettingsViewModel"
             BackgroundColor="Wheat">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Picker">
                <Setter Property="TextColor" Value="LightGray" />
                <Setter Property="BackgroundColor" Value="DarkGreen" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="TitleColor" Value="Black" />

            </Style>

            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="Gray" />
                <Setter Property="BackgroundColor" Value="DarkGreen" />
                <Setter Property="TextColor" Value="White" />
            </Style>
            <Style TargetType="HorizontalStackLayout">
                <Setter Property="BackgroundColor" Value="White" />

            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>

        <Grid ColumnDefinitions="auto,*,*,*"
              ColumnSpacing="10"
              RowDefinitions="auto,*,*,*,*,50">


            <HorizontalStackLayout Margin="0,10,0,10"
                                   Padding="0,10"
                                   VerticalOptions="Start">
                <VerticalStackLayout Margin="10,10,0,0"
                                     Padding="0,0,0,10"
                                     VerticalOptions="Center">
                    <Label FontAttributes="Bold"
                           Text="Callsign"
                           TextColor="Black" />
                    <Entry Placeholder="Callsign"
                           Text="{Binding Callsign}"
                           TextChanged="ForceUppercase" />
                </VerticalStackLayout>

            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="1"
                                   BackgroundColor="White"
                                   VerticalOptions="Start">
                <VerticalStackLayout Margin="10,0,0,40">
                    <Label FontAttributes="Bold"
                           Text="Longitude"
                           TextColor="Black" />
                    <Entry Placeholder="Longitude"
                           Text="{Binding Longitude}"
                           TextChanged="OnNumericEntryTextChanged" />
                </VerticalStackLayout>

                <VerticalStackLayout Margin="10,0,0,40">
                    <Label FontAttributes="Bold"
                           Text="Latitude"
                           TextColor="Black" />
                    <Entry Placeholder="Latitude"
                           Text="{Binding Latitude}"
                           TextChanged="OnNumericEntryTextChanged" />
                </VerticalStackLayout>

                <VerticalStackLayout Margin="10,0,0,40">
                    <Label FontAttributes="Bold"
                           Text="Grid Square"
                           TextColor="Black" />
                    <Entry Placeholder="Grid Square" Text="{Binding GridSquare}" />
                </VerticalStackLayout>
            </HorizontalStackLayout>


            <VerticalStackLayout Grid.Row="2"
                                 BackgroundColor="White"
                                 VerticalOptions="Center">

                <VerticalStackLayout Padding="5" VerticalOptions="Center">
                    <Label Margin="12,0,0,0"
                           FontAttributes="Bold"
                           Text="Database Type"
                           TextColor="Black" />
                    <!--
                <Picker x:Name="databasePicker"

                        Margin="10,0,10,0"
                        ItemsSource="{Binding DbOptions}"
                        SelectedItem="{Binding DbSelection, Mode=TwoWay}" />
                    -->


                    <control:SfComboBox DisplayMemberPath="Name" 
                                        ItemsSource="{Binding DbOptionType}"
                                        Placeholder="Select Database type"
                                        SelectedIndex="0"
                                        SelectedItem="{Binding DbType}"
                                        PlaceholderColor="DarkGray"
                                        DropDownIconColor="Green"
                                        IsEditable="False"
                                        ClearButtonIconColor="Red"/>


                </VerticalStackLayout>

                <VerticalStackLayout Margin="10,0,0,40"
                                     Padding="5"
                                     VerticalOptions="Center">
                    <Label FontAttributes="Bold"
                           Text="Connection String"
                           TextColor="Black" />
                    <Entry Placeholder="Connections String" Text="{Binding ConnectionString}" />
                </VerticalStackLayout>

            </VerticalStackLayout>

            <Button x:Name="saveBtn"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    Command="{x:Binding SaveCommand}"
                    Text="Save" />
            <Button x:Name="btnAdd"
                    Grid.Row="5"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    Command="{x:Binding CloseCommand}"
                    Text="Close" />
        </Grid>
    </ScrollView>

</ContentPage>