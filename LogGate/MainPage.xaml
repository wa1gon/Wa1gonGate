<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LogGate.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm ="clr-namespace:LogGate.ViewModel"

    x:DataType="vm:QsoViewModel">

    <ContentPage.BindingContext>
        <vm:QsoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid
            Padding="5"
            ColumnDefinitions="*,*"
            RowDefinitions="50,*,50,50">
            <SearchBar
                x:Name="Search"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Grid.Column="0"
                Placeholder="Search Contact" />

            <FlexLayout
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Direction="Row"
                Wrap="Wrap">
                <VerticalStackLayout>
                    <Label Padding="10,0,0,0" Text="Call" />
                    <Entry Placeholder="Call Sign" Text="{Binding Call}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label
                        Padding="10,0,0,0"
                        MinimumWidthRequest="180"
                        Text="Name" />
                    <Entry Placeholder="Name" Text="{Binding Name}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Padding="10,0,0,0" Text="Mode" />
                    <Entry Placeholder="Mode" Text="{Binding Mode}" />
                </VerticalStackLayout>
                <VerticalStackLayout>

                            <Label Padding="10,0,0,0" Text="Select Date and Time:" />
                            <HorizontalStackLayout>

                                <DatePicker x:Name="datePicker" Date="{Binding QsoDateOnly}" />
                                <TimePicker x:Name="timePicker" Time="{Binding QsoTimeOnly}" />


                            </HorizontalStackLayout>

                </VerticalStackLayout>

            </FlexLayout>


            <Button
                x:Name="btnAdd"
                Command="{x:Binding AddCommand}"
                Grid.Row="2"
                Margin="5"
                Grid.Column="0"
                Text="Add QSO" />

            <Button
                x:Name="btnSettings"
                Margin="5"
                Command="{x:Binding SettingsCommand}"
                Grid.Row="2"
                Grid.Column="1"
                Text="Settings" />

        </Grid>
    </ScrollView>

</ContentPage>
