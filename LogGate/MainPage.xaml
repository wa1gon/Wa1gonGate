<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LogGate.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LogGate.ViewModel"
    xmlns:viewmodel="clr-namespace:LogGate.ViewModel"
    x:DataType="viewmodel:MainViewModel">

    <ContentPage.BindingContext>
        <local:QsoViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid
            Padding="5"
            ColumnDefinitions="*"
            RowDefinitions="50,*,50">
            <SearchBar
                x:Name="Search"
                Grid.Row="0"
                Grid.Column="0"
                Placeholder="Search Contact" />

            <FlexLayout Direction="Row" Wrap="Wrap" Grid.Row="1" >
                <VerticalStackLayout>
                    <Label Text="Call"  Padding="10,0,0,0"/>
                    <Entry Placeholder="Call Sign" Text="{Binding Call}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Name" Padding="10,0,0,0" MinimumWidthRequest="180"/>
                    <Entry Placeholder="Name" Text="{Binding Name}" />
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Mode"  Padding="10,0,0,0"/>
                    <Entry Placeholder="Mode" Text="{Binding Mode}" />
                </VerticalStackLayout>
                <VerticalStackLayout>
                    <Label Text="Select Date and Time:"  Padding="10,0,0,0"/>
                    <HorizontalStackLayout>
                        <DatePicker x:Name="datePicker" Date="{Binding QsoDateOnly}" />
                        <TimePicker x:Name="timePicker" Time="{Binding QsoTimeOnly}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

            </FlexLayout>

            <Button
                x:Name="btnAdd"
                Grid.Row="2"
                Grid.Column="0"
                Text="Add Contact" />

        </Grid>
    </ScrollView>

</ContentPage>
