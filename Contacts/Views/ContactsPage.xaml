<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.ContactsPage"
             Title="Contacts Page">

    <Grid RowDefinitions="*,50" ColumnDefinitions="*" Padding="5">
        <ListView Grid.Row="0" Grid.Column="0"
              x:Name="listContacts" 
              ItemSelected="listContacts_ItemSelected"
              ItemTapped="listContacts_ItemTapped"
              BackgroundColor="Transparent"
              SeparatorColor="Silver" RowHeight="65">


            <ListView.ItemTemplate >
                <DataTemplate>
                    <TextCell Text="{Binding Path=Name}" Detail="{Binding Email}">

                    </TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
        <Button Grid.Row="1" Grid.Column="0" x:Name="btnAdd" Text="Add Contact" Clicked="btnAddContact_Clicked"/>

    </Grid>

</ContentPage>